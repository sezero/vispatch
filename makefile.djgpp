# GNU Makefile for vispatch 32 bit DOS binaries using GCC (DJGPP).
# $Id: makefile.djgpp,v 1.2 2008-10-31 16:40:52 sezero Exp $

CC ?= gcc

OBJECTS:= utilslib.o \
	strlcat.o \
	strlcpy.o \
	vispatch.o

OPTIMIZATIONS:= -O2
#OPTIMIZATIONS:= -O -g

CFLAGS := -Wall -W -Wshadow $(OPTIMIZATIONS)
LDFLAGS:= -lc -lgcc
LDFLAGS:= $(LDFLAGS) -s

all: vispatch.exe

.c.o:
	$(CC) $(CFLAGS) -c $*.c

vispatch.exe: $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) $(LDFLAGS)

clean:
	rm -f *.o *.d

